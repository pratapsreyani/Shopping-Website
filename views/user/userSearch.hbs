
<span id="wrapper">
    {{# each products }}
        <div class="row">
            {{#each this }}
                <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.name }} </h3>
                        <h6>Quantity: {{ this.quantity }}</h6>
                        <p class="description">{{ this.description}}</p>
                        <div class="clearfix">
                            <div class="price pull-left"> â‚¹{{this.price}} </div>
                                <a href="/addToCart/{{this._id}}" class="btn  btn-success pull-right" role="button">Purchase</a>
                                <a href="/delete/{{this._id}}" class="btn  btn-warning pull-right" role="button">Remove Item</a>
                                <a href="/editProduct/{{this._id}}" class="btn  btn-info pull-right" role="button">Edit Item</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    {{/each}}
</span>

