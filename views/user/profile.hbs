<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
            <hr>
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group black-text">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge badge-info">{{ this.price }}</span>
                                {{ this.item.name }} | {{ this.qty }} Units ||
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer text-right">
                    <strong>Total Price: â‚¹{{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>