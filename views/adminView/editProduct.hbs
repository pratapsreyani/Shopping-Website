{{products}}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Edit Product</h1>
        <form action="/editProduct/{{data.id}}" method="post">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input value="{{data.name}}" type="text" id="name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input value="{{data.description}}" type="description" id="description" name="description" class="form-control">
            </div>
            <div class="form-group">
                <label for="Price">Price:</label>
                <input value="{{data.price}}" type="number" id="price" name="price" class="form-control">
            </div>
            <div class="form-group">
                <label for="Quantity">Quantity:</label>
                <input value="{{data.quantity}}" type="number" id="quantity" name="quantity" class="form-control">
            </div>
            <div class="form-group">
                <label for="imagePath">Image URL:</label>
                <input value="{{data.imagepath}}" type="text" id="imagepath" name="imagepath" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Edit Product</button>
        </form>
    </div>
</div>
