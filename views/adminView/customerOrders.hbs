<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
            <hr>
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group black-text">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge badge-info">{{ this.price }}</span> <div class="form-group">
                                <input value="{{this.price}}" type="text" id="name" name="price" class="form-control">
                            </div>
                                {{ this.item.name }} <div class="form-group">
                                <input value="{{this.item.name}}" type="text" id="name" name="name" class="form-control">
                            </div> {{ this.qty }} Units <div class="form-group">
                                <input value="{{this.qty}}" type="text" id="name" name="qty" class="form-control">
                            </div>

                                <button type="button" class="btn btn-success pull-right" ><a href="user/editOrder">Edit Order</a></button><br><hr>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer text-right">
                    <strong>Total Price: â‚¹{{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
    </div>