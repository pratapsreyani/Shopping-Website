
<span id="wrapper">
    {{# each products }}
        <div class="row">
            {{#each this }}
                <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.name }} </h3>
                        <h6>Quantity: {{ this.quantity }}</h6>
                        <p class="description">{{ this.description}}</p>
                        <div class="clearfix">
                            <div class="price pull-left"> â‚¹{{this.price}} </div>
                                 <div class="btn-group  pull-right" role="group" aria-label="Button group with nested dropdown">
                                    <button type="button" class="btn btn-success" ><a href="/addToCart/{{this._id}}">Purchase</a></button>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                     Other
                                    </button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                   
                                    <hr>
                                    <center><a class="dropdown-item" href="/editProduct/{{this._id}}">Edit Product</a></center>
                                </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    {{/each}}
</span>
